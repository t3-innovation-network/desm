<div class="container dashboard-container">
  <div class="row">
    <div class="col-lg-12 mx-auto">

      <div class="card">
        <div class="card-header">
          <i class="fa fa-building"></i>
          <strong>
            <%= t('dashboard.organizations.edit') %>
          </strong>
        </div>
      </div>

      <div class="card-body">
        <p class="mandatory-fields-notice">
          <%= t('dashboard.general.mandatory_fields') %>
        </p>

        <div class="col-sm-6">
          <%= form_with(model: @organization, url: "/admin/organizations/#{@organization.id}", method: "put", scope: "organization") do |f| %>
            <div class="form-group">
              <label>
                <%= t('dashboard.organizations.attributes.name') %>
                <span class="text-danger">*</span>
              </label>
              <%= f.text_field :name, class: "form-control", placeholder: "Enter the name of the organization", required: true %>
            </div>
            <div class="form-group">
              <%= f.submit t('dashboard.general.send'), class: 'btn btn-dark' %>
            </div>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
