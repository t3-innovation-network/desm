<div class="container dashboard-container">
  <div class="row">
    <div class="col-lg-12 mx-auto">

      <div class="card">
        <div class="card-header">
          <i class="fa fa-users"></i>
          <strong>
            <%= t('dashboard.users.title') %>
          </strong>
          <%= link_to new_admin_user_path, :class => "float-right btn btn-dark btn-sm" do %>
            <i class="fa fa-fw fa-plus-circle"></i>
            <%= t('dashboard.users.actions.add') %>
          <% end %>
        </div>
      </div>

      <table class="table table-striped">
        <thead>
          <tr>
            <th>
              <%= t('dashboard.users.attributes.email') %>
            </th>
            <th>
              <%= t('dashboard.users.attributes.organization') %>
            </th>
            <th>
              <%= t('dashboard.general.actions') %>
            </th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |c| %>
            <tr>
              <td>
                <%= c.email %>
              </td>
              <td>
                <%= c.organization.name %>
              </td>
              <td>
                <%= link_to edit_admin_user_path(c.id), :class => "btn btn-dark" do %>
                    <i class="fa fa-pencil-alt" aria-hidden="true"></i>
                <% end %>

                <%= link_to "/admin/users/#{c.id}", :class => "btn btn-dark", method: :delete, data: { confirm: t('dashboard.general.confirmation') } do %>
                    <i class="fa fa-trash" aria-hidden="true"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>